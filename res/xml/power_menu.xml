<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
            android:title="@string/power_menu_title">

    <!-- power menu reboot -->
    <com.extra.settings.preferences.SecureSettingSwitchPreference
        android:key="reboot_in_power_menu"
        android:title="@string/powermenu_reboot_title"
        android:defaultValue="true"
        android:icon="@drawable/ic_restart" />

    <!-- power menu advanced reboot -->
    <com.extra.settings.preferences.SecureSettingSwitchPreference
        android:key="advanced_reboot_in_power_menu"
        android:title="@string/powermenu_advanced_restart_title"
        android:summary="@string/powermenu_advanced_restart_summary"
        android:defaultValue="false"
        android:icon="@drawable/ic_restart_advanced" />

    <!-- power menu lockdown -->
    <com.extra.settings.preferences.SecureSettingSwitchPreference
        android:key="lockdown_in_power_menu"
        android:title="@string/powermenu_lockdown_title"
        android:defaultValue="false"
        android:icon="@drawable/ic_lock_lockdown" />

    <!-- power menu screenshot-->
    <com.extra.settings.preferences.SecureSettingSwitchPreference
        android:key="screenshot_in_power_menu"
        android:title="@string/powermenu_screenshot_title"
        android:defaultValue="true"
        android:icon="@drawable/ic_screenshot" />

     <Preference
        	android:key="advanced_controls"
        	android:persistent="false"
        	android:title="@string/advanced_controls_title">
        <intent android:action="android.intent.action.MAIN"
            android:targetPackage="com.thht.settings.device"
            android:targetClass="com.thht.settings.device.DeviceSettings"/>
    	</Preference>      

</PreferenceScreen>
